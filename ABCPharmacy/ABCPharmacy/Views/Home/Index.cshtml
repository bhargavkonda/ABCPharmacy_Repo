@model ABCPharmacy.Models.MedicineModel
@{
    ViewBag.Title = "ABC Pharmacy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "searchform", searchObj = Model }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <!doctype html>
    <html lang="en">
    <head>
        <title>ABC Pharmacyh</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="~/Content/bootstrap.min.css">

        <script src="~/scripts/jquery-3.3.1.min.js"></script>

        @*<script src="~/Scripts/ABCPharmacy/home.js" type="text/javascript"></script>*@
    </head>

    <body>
        <br /><br />


        <div class="row div-margin">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Input.FullName)
                @Html.EditorFor(model => model.Input.FullName, new { @class = "form-control " })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.Input.Brand)
                @Html.EditorFor(model => model.Input.Brand, new { @class = "form-control " })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.Input.ExpiryDate)
                @Html.EditorFor(model => model.Input.ExpiryDate, new { @class = "form-control " })
            </div>
        </div>

        <br /><br />


              <div class="row div-margin">
                  <div class="col-md2">
                      <button type="submit" formaction=@Url.Action("Search", "Home") formmethod="post" class="btn">Search</button>
                      <button type="submit" formaction=@Url.Action("AddMedicineView", "Home") formmethod="post" class="btn">Add Medicine</button>
                  </div>
              </div>


        <div class="row div-margin">
            @if (Model != null && Model.Result != null && Model.Result.Count() > 0)
            {
                <div id="searchResultsdiv" class="col"><h4>Search Results</h4></div>
                <div class="col">
                    <div class="table-striped">
                        <table>
                            <thead class="thead-color">
                                <tr>
                                    <th>FullName &nbsp;&nbsp;</th>
                                    <th>Brand&nbsp;</th>
                                    <th>Price&nbsp;</th>
                                    <th>Quantity &nbsp;</th>
                                    <th>ExpiryDate &nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    foreach (var item in Model.Result.ToList())
                                    {
                                        if (item.ExpiryDate < DateTime.Now.AddDays(30))
                                        {
                                <tr style="background-color: red">
                                    <td>
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].MedicineId)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].FullName)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Brand)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Brand)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Price)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Price)
                                    </td>

                                    <td>

                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Quantity)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Quantity)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].ExpiryDate)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].ExpiryDate)
                                    </td>
                                    <td>
                                        <button type="submit" formaction=@Url.Action("UpdateView", "Home") formmethod="post" class="btn">UpdateDetails</button>
                                    </td>

                                </tr>
                                        }
                                        else if (item.Quantity < 10)
                                        {
                                <tr style="background-color: yellow">
                                    <td>
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].MedicineId)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].FullName)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Brand)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Brand)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Price)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Quantity)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Quantity)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].ExpiryDate)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].ExpiryDate)
                                    </td>

                                    <td>
                                        <button type="submit" formaction=@Url.Action("UpdateView", "Home") formmethod="post" class="btn">UpdateDetails</button>
                                    </td>

                                </tr>
                                        }
                                        else
                                        {
                                <tr style="background-color: yellow">
                                    <td>
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].MedicineId)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].FullName)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Brand)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Brand)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Price)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].Quantity)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].Quantity)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Result[i].ExpiryDate)
                                        @Html.HiddenFor(modelItem => modelItem.Result[i].ExpiryDate)
                                    </td>

                                    <td>
                                        <button type="submit" formaction=@Url.Action("UpdateMedicineView", "Home") formmethod="post" class="btn">UpdateDetails</button>
                                    </td>

                                </tr>
                                        }
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            }

            else if (Model != null && Model.MedicineResultCount == 0)
            {
                <div class="row div-margin">
                    <text>There are no records found</text>
                </div>
            }
        </div>


        <script></script>
    </body>
</html>
}
